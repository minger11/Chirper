# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.UserController.index()
GET     /register                   controllers.UserController.registerForm()
POST    /register                   controllers.UserController.doRegister()
POST    /login                      controllers.UserController.doLogin()
GET     /login                      controllers.UserController.loginForm()
GET     /logout                     controllers.UserController.doLogOut()
GET     /viewactivesessions         controllers.UserController.viewSessionsForm()
POST    /logout                     controllers.UserController.remoteLogout()
POST    /post                       controllers.UserController.doPost()
GET     /user                       controllers.UserController.user(email)
GET     /search                     controllers.UserController.search(search)
GET     /api/users/:user            controllers.UserController.userMessages(user: String)
GET     /api/tags/:tag              controllers.UserController.taggedMessages(tag: String)
POST    /api/postmessage            controllers.UserController.postAMessage()
GET     /spa                        controllers.UserController.spa()

GET     /message                    controllers.UserController.getMessage(n: String)
POST    /message                    controllers.UserController.postMessage()
OPTIONS /message                    controllers.UserController.optionsMessage()

GET     /websocket                  controllers.UserController.socket(topic:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

